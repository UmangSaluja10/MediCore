<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient_bg"
    tools:context=".Fragment.homeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/topImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:minHeight="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/health_banner"
            android:contentDescription="Top Health Banner" />

        <!-- Hero Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay Safe, Stay Healthy"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“The art of medicine consists of amusing the patient while nature cures the disease.”"
            android:textColor="#DDDDDD"
            android:layout_marginTop="8dp" />

        <!-- Stats Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/glass_effect_bg"
                android:padding="16dp"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/doctor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="140+"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctors At Work"
                    android:textColor="#DDDDDD" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/glass_effect_bg"
                android:padding="16dp"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/patient_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000+"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Satisfied Consultants"
                    android:textColor="#DDDDDD" />
            </LinearLayout>
        </LinearLayout>

        <!-- Services Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Services"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp" />

        <!-- Heart Care -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/glass_effect_bg"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/healthsection_upper"
                android:contentDescription="Heart Care" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="We provide diet plans for low/high BP and cholesterol, exercises for heart health, doctor consultations, and a heart risk prediction tool."
                android:textColor="#DDDDDD"
                android:paddingStart="12dp" />
        </LinearLayout>

        <!-- Eye Care -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/glass_effect_bg"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/eyecare_section_10"
                android:contentDescription="Eye Care" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="We provide vision-enhancing diets and exercises, eye doctor consultations, and an eye risk assessment feature."
                android:textColor="#DDDDDD"
                android:paddingStart="12dp" />
        </LinearLayout>

        <!-- Meditation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/glass_effect_bg"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/meditationsection"
                android:contentDescription="Meditation" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="We offer guided yoga and bodyweight exercises to enhance your mental and physical well-being."
                android:textColor="#DDDDDD"
                android:paddingStart="12dp" />
        </LinearLayout>

        <!-- Blood Donation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/glass_effect_bg"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/blooddonation_section"
                android:contentDescription="Blood Donation" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="You’ll be redirected to a government-trusted site to donate blood or find nearby donors."
                android:textColor="#DDDDDD"
                android:paddingStart="12dp" />
        </LinearLayout>

        <!-- About Us Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/teamwork"
            android:scaleType="fitCenter"
            android:contentDescription="About Us" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#DDDDDD"
            android:text="MediCore is your all-in-one health companion. We blend AI and expert advice to offer personalized care for your heart, eyes, body, and community. From smart predictions to doctor consultations, meditation guides, and verified blood donation access — we strive to make healthcare simple, accessible, and powerful for everyone." />
    </LinearLayout>
</ScrollView>
