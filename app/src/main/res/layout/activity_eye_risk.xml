<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient_bg"
    android:padding="16dp"
    tools:context=".EyeRiskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Logo -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/eyerisk"
            android:contentDescription="App Logo"
            android:layout_marginTop="60dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eye Risk Prediction"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Symptom Selection Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/glass_effect_bg"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Eye Symptoms"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/cbBlurry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blurry Vision"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/cbRedness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redness"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/cbItchiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Itchy Eyes"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/cbDryness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dry Eyes"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/cbPain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eye Pain"
                android:textColor="#FFFFFF" />

            <!-- Add more if needed -->

            <Button
                android:id="@+id/btnPredictEye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Predict Eye Risk"
                android:layout_marginTop="16dp"
                android:backgroundTint="#FF3D00"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Result Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/glass_effect_bg"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prediction Result"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtEyeResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Result will appear here"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
