<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient_bg"
    android:padding="16dp"
    tools:context=".exerciseEye">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/eyeexercise"
            android:contentDescription="Eye Icon"
            android:layout_marginTop="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eye Health Exercises"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- 1. Blinking -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/glass_effect_bg"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blinking"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_fileName="Eye_01.json" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blink rapidly for a few seconds every 20 minutes to reduce eye strain and moisten eyes."
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- 2. Palming -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/glass_effect_bg"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palming"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_fileName="Eye_01.json" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rub your palms together and gently cup your eyes without pressure. Helps relax the optic nerve."
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- 3. Eye Rolling -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/glass_effect_bg"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eye Rolling"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_fileName="Eye_01.json" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Roll your eyes clockwise and counterclockwise slowly. Enhances eye muscle flexibility."
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- 4. Focus Change -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/glass_effect_bg"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Focus Change"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_fileName="Eye_01.json" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Switch focus from your thumb (close) to an object far away. Strengthens focus muscles."
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- 5. 20-20-20 Rule -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/glass_effect_bg"
            android:layout_marginBottom="32dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-20-20 Rule"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_fileName="Eye_01.json" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every 20 minutes, look at something 20 feet away for 20 seconds. Prevents digital eye strain."
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
